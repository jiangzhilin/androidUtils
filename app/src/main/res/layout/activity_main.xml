<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.linzi.androidutils.MainActivity">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refresh">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/bt_sys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统提示"/>
            <Button
                android:id="@+id/bt_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dialog"/>
            <Button
                android:id="@+id/bt_keybord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="keybord"/>
            <com.linzi.utilslib.weight.CountNumberView
                android:id="@+id/txt"
                android:layout_width="100dp"
                android:layout_height="50dp"/>
            <com.linzi.utilslib.weight.UISwitchButton
                android:layout_width="100dp"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/bt_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相册"/>
            <Button
                android:id="@+id/bt_shuaxin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刷新"/>
            <EditText
                android:id="@+id/ed_msg"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="默认值"/>
            <Button
                android:id="@+id/bt_lottie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lottie"/>
            <Button
                android:id="@+id/bt_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"/>
        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
